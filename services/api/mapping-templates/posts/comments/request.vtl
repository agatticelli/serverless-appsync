{
    "version" : "2017-02-28",
    "operation" : "Query",
    "index" : "byPost",
    "query" : {
        "expression": "#PI = :pi",
        "expressionNames": {
            "#PI": "postId",
        },
        "expressionValues" : {
            ":pi" : $util.dynamodb.toDynamoDBJson("$ctx.source.id")
        },
    },
    "scanIndexForward": false,
    "limit": $util.defaultIfNull(${ctx.args.limit}, 20),
    "nextToken": $util.toJson($util.defaultIfNullOrBlank($ctx.args.nextToken, null))
}